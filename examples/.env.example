# Example .env file for local development
# Copy this to .env and fill in your values

# Server configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# OpenTelemetry / Dynatrace
OTEL_ENABLED=true
OTEL_SERVICE_NAME=sveltekit-app
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-env-id.live.dynatrace.com/api/v2/otlp/v1/traces
OTEL_EXPORTER_OTLP_PROTOCOL=http
DYNATRACE_API_TOKEN=your-dynatrace-api-token-here
OTEL_SAMPLE_RATE=1.0

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws

# Performance tuning
BODY_LIMIT=10mb
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000
MAX_REQUESTS_PER_SOCKET=0

# Proxy settings (if behind load balancer)
TRUST_PROXY=true
